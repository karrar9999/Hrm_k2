<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="@color/colorPrimaryDark" android:background="@drawable/backgrund">

    <EditText
            android:layout_width="320dp"
            android:layout_height="37dp"
            android:textAlignment="viewEnd"
            android:inputType="textPersonName"
            android:ems="10"
            android:paddingLeft="20dp"
            android:id="@+id/nameeditText_register"
            android:layout_marginTop="73dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/emaileditText2_register" android:hint="Name"
            android:background="@drawable/rounded"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:textAlignment="viewEnd"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:ems="10"
            android:id="@+id/emaileditText2_register"
            app:layout_constraintStart_toStartOf="@+id/nameeditText_register"
            app:layout_constraintEnd_toEndOf="@+id/nameeditText_register" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameeditText_register" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/passwordeditText3_register" android:hint="Email"
            android:background="@drawable/rounded"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:textAlignment="viewEnd"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:ems="10"
            android:id="@+id/passwordeditText3_register"
            app:layout_constraintStart_toStartOf="@+id/emaileditText2_register"
            app:layout_constraintEnd_toEndOf="@+id/emaileditText2_register" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/emaileditText2_register"
            android:hint="Password"
            android:background="@drawable/rounded" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/registrationbutton"/>
    <Button
            android:text="Register"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/registrationbutton" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordeditText3_register"
            app:layout_constraintEnd_toEndOf="@+id/passwordeditText3_register"
            app:layout_constraintStart_toStartOf="@+id/passwordeditText3_register"
            android:background="@drawable/backgrund"
            app:layout_constraintBottom_toTopOf="@+id/already_have_accounttextView"
            android:textStyle="bold"/>
    <TextView
            android:text="Already have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/already_have_accounttextView" app:layout_constraintEnd_toEndOf="@+id/registrationbutton"
            app:layout_constraintStart_toStartOf="@+id/registrationbutton" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/registrationbutton"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="207dp"
            android:textSize="14sp" android:textStyle="bold" app:layout_constraintHorizontal_bias="0.533"/>

</android.support.constraint.ConstraintLayout>