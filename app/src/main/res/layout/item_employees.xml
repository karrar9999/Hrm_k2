<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                    android:layout_height="200dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView android:layout_width="match_parent" android:layout_height="200dp"
                   android:scaleType="centerCrop"
                   android:id="@+id/image_employee" app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                   app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                   app:layout_constraintTop_toTopOf="parent" android:contentDescription="TODO"/>
        <TextView
                android:text="karrar"
                android:background="#88000000"
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/name_textView" app:layout_constraintEnd_toEndOf="@+id/image_employee"
                app:layout_constraintStart_toStartOf="@+id/image_employee" android:layout_marginStart="8dp"
                android:textSize="30sp" android:textAlignment="center" android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/image_employee"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="50dp"/>


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>