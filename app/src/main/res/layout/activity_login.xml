<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/backgrund">

    <EditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:textAlignment="viewEnd"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_login_editText"
            android:background="@drawable/rounded" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="79dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/password_login_editText2"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintVertical_chainStyle="spread_inside" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:hint="Email"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:textAlignment="viewEnd"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_login_editText2"
            android:background="@drawable/rounded"
            app:layout_constraintEnd_toEndOf="@+id/email_login_editText"
            app:layout_constraintStart_toStartOf="@+id/email_login_editText"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_login_editText" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/login_button" android:hint="Password"/>
    <Button
            android:text="Login"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/login_button" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/password_login_editText2" app:layout_constraintEnd_toEndOf="@+id/password_login_editText2"
            app:layout_constraintStart_toStartOf="@+id/password_login_editText2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/name_textView" android:textStyle="bold"
            android:layout_marginEnd="3dp" android:background="@drawable/backgrund"/>
    <TextView
            android:text="Back to register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/login_button"
            app:layout_constraintStart_toStartOf="@+id/login_button" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/login_button" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="258dp" app:layout_constraintHorizontal_bias="0.509"
            android:id="@+id/back_to_register_textview"/>
</android.support.constraint.ConstraintLayout>