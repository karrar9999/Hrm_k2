<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:layout_gravity="center"
                                             android:background="@color/cardview_dark_background">


    <EditText

            android:layout_width="320dp"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:inputType="textPersonName"
            android:textAlignment="viewEnd"
            android:ems="10"
            android:id="@+id/name_employee_editText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="98dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp" android:hint="Name"
            android:layout_marginBottom="15dp" app:layout_constraintBottom_toTopOf="@+id/age_employee_editText"
            android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/rounded"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:textAlignment="viewEnd"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/age_employee_editText"
            android:hint="Age"
            app:layout_constraintEnd_toEndOf="@+id/name_employee_editText"
            app:layout_constraintStart_toStartOf="@+id/name_employee_editText" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/name_employee_editText" android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/salaryeditText" android:background="@drawable/rounded"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:textAlignment="viewEnd"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/salaryeditText"
            android:hint="Salary"
            app:layout_constraintEnd_toEndOf="@+id/age_employee_editText"
            app:layout_constraintStart_toStartOf="@+id/age_employee_editText" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/age_employee_editText" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/ratingButton" android:background="@drawable/rounded"/>
    <Button
            android:text="Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UpdateButton"
            android:background="@drawable/rounded"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/DeletButton"
            android:layout_marginTop="37dp" app:layout_constraintTop_toBottomOf="@+id/ratingButton"
            android:layout_marginBottom="75dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AddButton"
            android:background="@drawable/rounded"
            app:layout_constraintStart_toEndOf="@+id/DeletButton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="37dp" app:layout_constraintTop_toBottomOf="@+id/ratingButton"
            android:layout_marginBottom="75dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DeletButton"
            android:background="@drawable/rounded"
            app:layout_constraintStart_toEndOf="@+id/UpdateButton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/AddButton"
            android:layout_marginTop="37dp" app:layout_constraintTop_toBottomOf="@+id/ratingButton"
            android:layout_marginBottom="21dp" app:layout_constraintBottom_toTopOf="@+id/back_button"/>
    <Button
            android:text="Rating Employee"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/ratingButton"
            app:layout_constraintEnd_toEndOf="@+id/salaryeditText"
            app:layout_constraintStart_toStartOf="@+id/salaryeditText" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/salaryeditText" android:background="@drawable/rounded"/>
    <Button
            android:text="Back"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/back_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="156dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="185dp" app:layout_constraintHorizontal_bias="0.108"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@+id/DeletButton"/>
    <Button
            android:text="select image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uplpoad_image"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="26dp"
            android:layout_marginBottom="26dp" app:layout_constraintBottom_toTopOf="@+id/name_employee_editText"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="126dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="138dp"/>


</android.support.constraint.ConstraintLayout>