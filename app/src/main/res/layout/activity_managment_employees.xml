<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name_employee_editText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="98dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="74dp" android:hint="Name"
            android:layout_marginBottom="15dp" app:layout_constraintBottom_toTopOf="@+id/age_employee_editText"
            android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/age_employee_editText"
            android:hint="Age"
            app:layout_constraintEnd_toEndOf="@+id/name_employee_editText"
            app:layout_constraintStart_toStartOf="@+id/name_employee_editText" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/name_employee_editText" android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/salaryeditText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/salaryeditText"
            android:hint="Salary"
            app:layout_constraintEnd_toEndOf="@+id/age_employee_editText"
            app:layout_constraintStart_toStartOf="@+id/age_employee_editText" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/age_employee_editText" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/ratingButton"/>
    <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AddButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/DeletButton" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingButton" android:layout_marginBottom="61dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DeletButton"
            app:layout_constraintStart_toEndOf="@+id/AddButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/UpdateButton" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingButton" android:layout_marginBottom="61dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UpdateButton"
            app:layout_constraintStart_toEndOf="@+id/DeletButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/salaryeditText" android:layout_marginBottom="61dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Rating Employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingButton"
            app:layout_constraintEnd_toEndOf="@+id/salaryeditText"
            app:layout_constraintStart_toStartOf="@+id/salaryeditText" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/salaryeditText"/>
    <Button
            android:text="Back"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/back_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/DeletButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="156dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="156dp"/>


</android.support.constraint.ConstraintLayout>